@{
    ViewData["Title"] = "Home Page";
}

<div class="card shadow mt-5 mx-auto w-50 d-flex flex-direction-column align-items-center">
    <div class="card-header container-fluid ">
        <h1 class="text-primary-emphasis">Welcome!</h1>
    </div>
    <div class="card-body">
        <h3 class="mb-3">Please give your name:</h3>
        <form action="Login" method="post">
            <div class="form-group mb-3">
                <input type="text" name="UserName" class="form-control fs-5">
            </div>
            <div class="form-group mb-3 text-center">
                <input type="submit" value="Submit" class="form-control btn btn-success w-50">
            </div>
        </form>
    </div>
</div>