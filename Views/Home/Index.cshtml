@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-5 mx-auto w-75">
    <div class="card shadow">
        <div class="card-header">
            <h1 class="text-center text-primary-emphasis">Welcome!</h1>
        </div>
        <div class="card-body">
            <div>
                <h3>Please give your name:</h3>
            </div>
            <form asp-action="Process" asp-controller="Home" method="post">
                <div class="mb-3 d-flex justify-content-between">
                    <label class="form-label   fs-5 text-primary-emphasis"></label>
                    <input class="form-control fs-5 text-center w-50">
                </div>
                
                <div>
                    <input type="submit" value="Submit" class="form-control btn btn-success w-25">
                </div>
            </form>
        </div>
    </div>
</div>